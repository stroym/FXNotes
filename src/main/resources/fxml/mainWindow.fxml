<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.papp.fxnotes.controller.MainController">
    <children>
        <MenuBar fx:id="menu" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#saveToCurrentFile" text="Save to current file"/>
                        <MenuItem mnemonicParsing="false" onAction="#importFromJson" text="Import from JSON"/>
                        <MenuItem mnemonicParsing="false" onAction="#importFromBinary" text="Import from binary"/>
                        <MenuItem mnemonicParsing="false" onAction="#exportToJson" text="Export as JSON"/>
                        <MenuItem mnemonicParsing="false" onAction="#exportToBinary" text="Export as binary"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Show">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showAll" text="Show all"/>
                        <MenuItem mnemonicParsing="false" onAction="#showTagged" text="Show only with tag"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About FXNotes"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.2, 0.5, 0.5" focusTraversable="true" prefHeight="-1.0" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane maxWidth="200.0" minWidth="200.0">
                    <children>
                        <SplitPane orientation="VERTICAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <items>
                                <ScrollPane fitToHeight="true" fitToWidth="true">
                                    <content>
                                        <AnchorPane>
                                            <children>
                                                <ListView fx:id="notesListView" editable="true"
                                                          onMouseClicked="#noteListViewLeftClick"
                                                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <contextMenu>
                                                        <ContextMenu>
                                                            <items>
                                                                <MenuItem fx:id="newNoteItem" mnemonicParsing="false"
                                                                          onAction="#addNote" text="Add"/>
                                                                <MenuItem mnemonicParsing="false" onAction="#deleteNote"
                                                                          text="Delete"/>
                                                            </items>
                                                        </ContextMenu>
                                                    </contextMenu>
                                                </ListView>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </ScrollPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TextArea fx:id="noteTextArea" onKeyTyped="#editNoteText" wrapText="true"
                                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                  AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
                <AnchorPane maxWidth="100.0" minWidth="100.0">
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <ListView fx:id="noteTagsListView" AnchorPane.bottomAnchor="0.0"
                                                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                  AnchorPane.topAnchor="0.0">
                                            <contextMenu>
                                                <ContextMenu>
                                                    <items>
                                                        <MenuItem mnemonicParsing="false" onAction="#untagNote"
                                                                  text="Remove"/>
                                                    </items>
                                                </ContextMenu>
                                            </contextMenu>
                                        </ListView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
                <AnchorPane maxWidth="100.0" minWidth="100.0">
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <AnchorPane>
                                    <children>
                                        <ListView fx:id="globalTagsListView" editable="true"
                                                  onEditCommit="#commitTagEdit" AnchorPane.bottomAnchor="0.0"
                                                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                  AnchorPane.topAnchor="0.0">
                                            <contextMenu>
                                                <ContextMenu>
                                                    <items>
                                                        <MenuItem mnemonicParsing="false" onAction="#addTag"
                                                                  text="Add"/>
                                                        <MenuItem mnemonicParsing="false" onAction="#deleteTag"
                                                                  text="Delete"/>
                                                    </items>
                                                </ContextMenu>
                                            </contextMenu>
                                        </ListView>
                                    </children>
                                </AnchorPane>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label fx:id="statusLabel" maxHeight="1.7976931348623157E308" maxWidth="-1.0" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3"/>
                    </font>
                    <textFill>
                        <Color blue="0.625" green="0.625" red="0.625" fx:id="x4"/>
                    </textFill>
                </Label>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
